<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#fff">
 
        <!--  Header  Starts-->
        <LinearLayout android:id="@+id/header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@layout/header_gradient"
                android:paddingTop="1dip"
                android:paddingBottom="1dip">
                
        </LinearLayout>
        <!--  Header Ends -->
 
        <!-- Registration Form -->
        <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="10dip"
          android:layout_below="@id/header">
          <!-- Stuff Name Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="@string/loststuff_name"/>
          <EditText android:id="@+id/loststuff_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"
                android:inputType="textNoSuggestions"/>
          <!--  Location Label -->
          <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="@string/loststuff_loc"/>
          <EditText 
                android:id="@+id/loststuff_loc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:singleLine="true"
                android:layout_marginBottom="20dip"
                android:inputType="textNoSuggestions"/>
          <!-- Discription Label -->
          <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="@string/loststuff_disc"/>
          <EditText android:id="@+id/loststuff_disc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:inputType="textNoSuggestions"/>
          <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="@string/loststuff_date"/>
          <EditText android:id="@+id/loststuff_date"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:inputType="datetime"/>
          <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="@string/loststuff_prize"/>
          <EditText android:id="@+id/loststuff_prize"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="5dip"
                android:inputType="textNoSuggestions"/>
          <!-- Register Button -->
          <Button android:id="@+id/loststuff_submit"
                android:layout_width="fill_parent"   
                android:layout_height="wrap_content"   
                android:layout_marginLeft="42dp"   
                android:layout_marginRight="42dp"   
                android:layout_marginTop="10dp"   
                android:text="@string/loststuff_submit"/>
          <Button android:id="@+id/loststuff_cancle"
                android:layout_width="fill_parent"   
                android:layout_height="wrap_content"    
                android:layout_marginLeft="42dp"   
                android:layout_marginRight="42dp"   
                android:layout_marginTop="10dp" 
                android:text="@string/loststuff_cancle"/>
      
        </LinearLayout>
        <!-- Registration Form Ends -->
  </RelativeLayout>
</ScrollView>